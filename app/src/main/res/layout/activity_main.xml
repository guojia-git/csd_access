<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current MAC"
        android:id="@+id/tv_cur"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/btn_change"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_backup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup"
        android:id="@+id/btn_backup"
        android:layout_below="@+id/btn_check"
        android:layout_alignLeft="@+id/btn_change"
        android:layout_alignStart="@+id/btn_change" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_mac"
        android:layout_below="@+id/tv_cur"
        android:layout_alignLeft="@+id/tv_cur"
        android:layout_alignStart="@+id/tv_cur"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_mac"
        android:layout_alignTop="@+id/btn_change"
        android:layout_alignLeft="@+id/tv_mac"
        android:layout_alignStart="@+id/tv_mac"
        android:layout_marginLeft="-5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK"
        android:id="@+id/btn_check"
        android:layout_alignBottom="@+id/tv_mac"
        android:layout_alignLeft="@+id/btn_backup"
        android:layout_alignStart="@+id/btn_backup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target MAC"
        android:id="@+id/textView"
        android:layout_alignLeft="@+id/tv_mac"
        android:layout_alignStart="@+id/tv_mac"
        android:layout_below="@+id/tv_mac"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/btn_send"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/btn_change"
        android:layout_alignStart="@+id/btn_change"
        android:layout_marginTop="-10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUEST"
        android:id="@+id/btn_request"
        android:layout_below="@+id/btn_send"
        android:layout_alignRight="@+id/btn_send"
        android:layout_alignEnd="@+id/btn_send" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/textView2"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/btn_change"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:layout_alignTop="@+id/btn_request"
        android:layout_alignLeft="@+id/et_mac"
        android:layout_alignStart="@+id/et_mac"
        android:text="3105927223" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSD Access"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_mac"
        android:layout_alignStart="@+id/et_mac"
        android:layout_marginTop="25dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="70dp" />
</RelativeLayout>
